{
  "type": "array",
  "description": "Whole definition",
  "items": {
    "type": "object",
    "description": "Single output definition",
    "properties": {
      "input": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "-i": {
              "description": "Input file",
              "type": "string"
            },
            "-v": {
              "description": "Generated variable name (defaults to short file name without extension)",
              "type": "string"
            },
            "-n": {
              "description": "Target namespace",
              "type": "string"
            }
          },
          "required": ["-i"]
        }
      },
      "output": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "-o": {
                "type": "string",
                "description": "Path to generated files (both .h and .cpp) without extension"
              }
            },
            "required": ["-o"]
          },
          {
            "type": "object",
            "properties": {
              "-h": {
                "type": "string",
                "description": "Path to generated header file (including extension)"
              },
              "-c": {
                "type": "string",
                "description": "Path to generated cpp file (including extension)"
              }
            },
            "required": ["-h", "-s"]
          }
        ]
      }
    }
  }
}